<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium"
    android:paddingLeft="@dimen/padding_default"
    android:paddingRight="@dimen/padding_default"
    android:background="@drawable/user_info_card_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserPic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/user_pic_chandler"
        android:foreground="@drawable/user_pic_foreground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ivUserPic"
        android:layout_toRightOf="@+id/ivUserPic"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_marginLeft="@dimen/padding_medium"
        android:orientation="vertical">

        <com.kmutt.sit.apps.fit.views.CloudBoldTextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chandler Bing"
            android:textColor="#424242"
            android:textSize="24dp"/>

        <com.kmutt.sit.apps.fit.views.CloudBoldTextView
            android:id="@+id/tvUserStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ระดับเริ่มต้น"
            android:textColor="#80424242"
            android:textSize="19dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small">

            <com.kmutt.sit.apps.fit.views.CloudBoldTextView
                android:id="@+id/tvUserScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX"
                android:textColor="@color/colorPrimary"
                android:textSize="32dp"/>

            <com.kmutt.sit.apps.fit.views.CloudBoldTextView
                android:id="@+id/tvTextScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คะแนน"
                android:textColor="#80424242"
                android:textSize="19dp"
                android:layout_marginLeft="@dimen/padding_small"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>